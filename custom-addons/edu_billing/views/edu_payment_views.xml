
<odoo>
  <data>
    <record id="view_edu_payment_tree" model="ir.ui.view">
      <field name="name">edu.payment.tree</field>
      <field name="model">edu.payment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date"/>
          <field name="contract_id"/>
          <field name="amount"/>
          <field name="method"/>
          <field name="note"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record id="view_edu_payment_form" model="ir.ui.view">
      <field name="name">edu.payment.form</field>
      <field name="model">edu.payment</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="contract_id"/>
              <field name="date"/>
              <field name="amount"/>
              <field name="method"/>
              <field name="note"/>
              <field name="state"/>
            </group>
            <footer>
              <button name="action_post" type="object" class="btn-primary" string="Провести"/>
            </footer>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
