
<odoo>
  <data>
    <record id="view_edu_student_tree" model="ir.ui.view">
      <field name="name">edu.student.tree</field>
      <field name="model">edu.student</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="group"/>
          <field name="course"/>
          <field name="phone"/>
        </tree>
      </field>
    </record>

    <record id="view_edu_student_form" model="ir.ui.view">
      <field name="name">edu.student.form</field>
      <field name="model">edu.student</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="group"/>
              <field name="course"/>
              <field name="phone"/>
            </group>
            <notebook>
              <page string="Контракты">
                <field name="contract_ids">
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="contract_total"/>
                    <field name="paid_total" readonly="1"/>
                    <field name="penalty_total" readonly="1"/>
                    <field name="balance_total" readonly="1"/>
                    <field name="outstanding_with_penalty" readonly="1"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
