
<odoo>
  <data>
    <record id="view_edu_contract_tree" model="ir.ui.view">
      <field name="name">edu.contract.tree</field>
      <field name="model">edu.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="student_id"/>
          <field name="contract_total"/>
          <field name="paid_total" readonly="1"/>
          <field name="penalty_total" readonly="1"/>
          <field name="balance_total" readonly="1"/>
          <field name="outstanding_with_penalty" readonly="1"/>
        </tree>
      </field>
    </record>

    <record id="view_edu_contract_form" model="ir.ui.view">
      <field name="name">edu.contract.form</field>
      <field name="model">edu.contract</field>
      <field name="arch" type="xml">
        <form string="Контракт обучения">
          <header>
            <button name="action_recompute_allocation" type="object" class="btn-primary" string="Пересчитать распределение"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="student_id"/>
                <field name="contract_total"/>
                <field name="penalty_rate"/>
                <field name="paid_total" readonly="1"/>
                <field name="penalty_total" readonly="1"/>
                <field name="balance_total" readonly="1"/>
                <field name="outstanding_with_penalty" readonly="1"/>
              </group>
            </group>
            <notebook>
              <page string="Части (1→2→3→4)">
                <field name="installment_ids" context="{'default_contract_id': active_id}">
                  <tree editable="bottom">
                    <field name="sequence"/>
                    <field name="label"/>
                    <field name="deadline"/>
                    <field name="due_amount"/>
                    <field name="paid_amount" readonly="1"/>
                    <field name="balance_amount" readonly="1"/>
                    <field name="penalty_amount" readonly="1"/>
                    <field name="overdue" readonly="1"/>
                  </tree>
                  <form>
                    <group>
                      <field name="sequence"/>
                      <field name="label"/>
                      <field name="deadline"/>
                      <field name="due_amount"/>
                      <field name="paid_amount" readonly="1"/>
                      <field name="balance_amount" readonly="1"/>
                      <field name="penalty_amount" readonly="1"/>
                      <field name="overdue" readonly="1"/>
                    </group>
                  </form>
                </field>
              </page>
              <page string="Платежи">
                <field name="payment_ids" context="{'default_contract_id': active_id}">
                  <tree editable="bottom">
                    <field name="date"/>
                    <field name="amount"/>
                    <field name="method"/>
                    <field name="note"/>
                    <field name="state"/>
                  </tree>
                  <form>
                    <group>
                      <field name="date"/>
                      <field name="amount"/>
                      <field name="method"/>
                      <field name="note"/>
                      <field name="state"/>
                    </group>
                    <footer>
                      <button name="action_post" type="object" string="Провести" class="btn-primary"/>
                    </footer>
                  </form>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
